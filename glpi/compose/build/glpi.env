#Lista de paquetes
PACKS="wget vim nano procps mariadb-server mariadb-client apache2 curl iputils-ping net-tools dnsutils traceroute php-mysql php-apcu php-bz2 php-gd php-imap php-intl php-ldap php-mbstring php-xml php-xmlrpc php-zip php-cas"

#Variables.
GLPIV="11.0.1"
GLPIDB="glpi"
GLPIUSER="glpi"
PASS="abc123."

#Comandos a ejecutar al crear la imagen separados por ","
COMMANDS="mkdir -p /var/www/html/glpi,public,cd /tmp && wget -q https://github.com/glpi-project/glpi/releases/download/${GLPIV}/glpi-${GLPIV}.tgz && tar -xf glpi-${GLPIV}.tgz -C /var/www/html/glpi,chown -R www-data:www-data /var/www/html/glpi,a2enmod expires rewrite,echo \"<Directory /var/www/html/glpi>\nAllowOverride all\n</Directory>\" > /etc/apache2/conf-available/glpi.conf,a2enconf glpi,service mariadb start,echo \"create database $GLPIDB character set utf8mb4 collate utf8mb4_unicode_ci;\" | mysql -u root,echo \"grant all privileges on ${GLPIDB}.* to ${GLPIUSER}@localhost identified by '$PASS';\" | mysql -u root,echo \"grant select on mysql.time_zone_name to ${GLPIUSER}@localhost;\" | mysql -u root"

MYSQL_DATABASE=glpi
MYSQL_USER=glpi
MYSQL_PASSWORD=glpi
GLPI_DB_HOST=db
GLPI_DB_PORT=3306
GLPI_DB_NAME=glpi
GLPI_DB_USER=glpi
GLPI_DB_PASSWORD=glpi