#Lista de paquetes
PACKS="wget vim nano sudo procps mariadb-server mariadb-client curl iputils-ping net-tools dnsutils traceroute apt-transport-https gnupg"

#Variables. No cambiar ICDB ni ICUSER (son las mismas que en /etc/icinga2/features-available/ido-mysql.conf)
ICDB="icinga2"
ICUSER="icinga2"
ICPASS="abc123."

#Comandos a ejecutar al crear la imagen separados por ","
COMMANDS="cd /tmp && wget -O - https://packages.icinga.com/icinga.key | apt-key add,echo \"deb https://packages.icinga.com/debian icinga-buster main\" > /etc/apt/sources.list.d/icinga.list,echo \"deb-src https://packages.icinga.com/debian icinga-buster main\" >> /etc/apt/sources.list.d/icinga.list,apt update && DEBIAN_FRONTEND=noninteractive apt install -y icinga2 monitoring-plugins icinga2-ido-mysql icingaweb2 icingacli,service mysql start,echo \"create database $ICDB character set utf8 collate utf8_bin;\" | mysql -u root,echo \"grant all privileges on ${ICDB}.* to ${ICUSER}@localhost identified by '$ICPASS';\" | mysql -u root,mysql -u root -D $ICDB < /usr/share/icinga2-ido-mysql/schema/mysql.sql,mysql -u root -D $ICDB < /usr/share/icingaweb2/etc/schema/mysql.schema.sql,sed -i '/password/c\  password = \"${ICPASS}\"' /etc/icinga2/features-available/ido-mysql.conf,icinga2 feature enable ido-mysql"

